<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_videoyoulike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_thumbnail2"
            android:layout_width="175dp"
            android:layout_height="92dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/thumbnail_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/img_feature1" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardview_videoview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="@color/black"
                app:cardCornerRadius="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/view_eye"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:padding="3dp"
                    app:srcCompat="@drawable/icon_eye" />

                <TextView
                    android:id="@+id/videomaylike_view_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:gravity="center"
                    android:text="1.34k"
                    android:textColor="@color/white"
                    android:textSize="10dp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_marginEnd="5dp"
                android:id="@+id/cardview_videomaylikeTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="@color/black"
                app:cardCornerRadius="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">



                <TextView
                    android:id="@+id/videomaylike_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:fontFamily="@font/montserrat_semibold"
                    android:gravity="center"
                    android:text="15:30"
                    android:textColor="@color/white"
                    android:textSize="10dp" />

            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/videoyoulike_user_avatar"
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toEndOf="@id/layout_thumbnail2"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/avatar" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/videomaylike_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="Vu Dung"
            android:textSize="14dp"
            app:layout_constraintStart_toEndOf="@id/videoyoulike_user_avatar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@+id/videoyoulike_user_avatar"
            />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/videomaylike_videoTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="Leg days"
            android:textSize="14dp"
            app:layout_constraintEnd_toStartOf="@id/img_rate"
            app:layout_constraintStart_toEndOf="@id/layout_thumbnail2"
            app:layout_constraintTop_toBottomOf="@+id/videoyoulike_user_avatar" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/videomaylike_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="Just Move -"
            android:textSize="14dp"
            app:layout_constraintStart_toEndOf="@id/layout_thumbnail2"
            app:layout_constraintTop_toBottomOf="@+id/videomaylike_videoTitle" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_timeRelease"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/montserrat_regular"
            android:text="A day a go"
            android:textSize="14dp"
            app:layout_constraintStart_toEndOf="@id/videomaylike_category"
            app:layout_constraintTop_toBottomOf="@+id/videomaylike_videoTitle" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/videomaylike_bluetick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/videoyoulike_user_avatar"
            app:layout_constraintStart_toEndOf="@id/videomaylike_user_name"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/bluetick" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_rate"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_marginEnd="5dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toStartOf="@id/videomaylike_rate_number"
            app:layout_constraintTop_toBottomOf="@+id/videoyoulike_user_avatar"
            app:layout_constraintBottom_toBottomOf="@id/videomaylike_videoTitle"
            app:srcCompat="@drawable/rate" />

        <TextView
            android:id="@+id/videomaylike_rate_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/montserrat_semibold"
            android:text="4.5"
            android:textColor="@color/black"
            android:textSize="14dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/videoyoulike_user_avatar"
            app:layout_constraintBottom_toBottomOf="@id/videomaylike_videoTitle"
           />


        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_typeforUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            app:cardBackgroundColor="@color/gray"
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toEndOf="@id/layout_thumbnail2"
            app:layout_constraintTop_toBottomOf="@+id/videomaylike_category">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_typeOfUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:padding="7dp"
                android:text="Beginner"
                android:textColor="@color/black"
                android:textSize="10dp" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_timeofVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            app:cardBackgroundColor="@color/gray"
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp"

            app:layout_constraintStart_toEndOf="@id/cardview_typeforUser"
            app:layout_constraintTop_toBottomOf="@+id/videomaylike_category">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_videoTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_semibold"
                android:padding="7dp"
                android:text="@string/video_time"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_10" />

        </androidx.cardview.widget.CardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>