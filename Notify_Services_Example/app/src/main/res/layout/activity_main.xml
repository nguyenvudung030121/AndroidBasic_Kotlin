<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/edt_Message"
        android:hint="Message Here..."
        android:layout_centerInParent="true"
        android:layout_above="@+id/btn_SendNotify"
        android:layout_marginBottom="30dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_SendNotify"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="send notifycation"
        android:layout_marginBottom="20dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_startServices"
        android:text="Start Services"
        android:layout_centerInParent="true"
        android:layout_below="@+id/btn_SendNotify"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/btn_stopServices"
        android:text="Stop Services"
        android:layout_centerInParent="true"
        android:layout_below="@+id/btn_startServices"
        android:layout_marginTop="20dp"

        />


</RelativeLayout>
</layout>